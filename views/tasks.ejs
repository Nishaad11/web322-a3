<!-- views/tasks.ejs -->
<%- include('partials/header', { user: user || null }) %>

<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">My Tasks</h1>
    <a href="/tasks/add" class="btn btn-success btn-lg">
      Add New Task
    </a>
  </div>

  <% if (!tasks || tasks.length === 0) { %>
    <div class="text-center py-5">
      <h3 class="text-muted">No tasks yet</h3>
      <p class="text-muted">Click the button above to create your first task!</p>
    </div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% tasks.forEach(task => { %>
        <div class="col">
          <div class="card h-100 shadow-sm <%= task.status === 'completed' ? 'border-success' : 'border-warning' %>">
            <div class="card-body">
              <h5 class="card-title"><%= task.title %></h5>
              <% if (task.description) { %>
                <p class="card-text text-muted"><%= task.description %></p>
              <% } %>
              <% if (task.dueDate) { %>
                <small class="text-muted">
                  Due: <%= new Date(task.dueDate).toLocaleDateString() %>
                </small>
              <% } %>
            </div>
            <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
              <form action="/tasks/status/<%= task.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn <%= task.status === 'completed' ? 'btn-success' : 'btn-warning' %> btn-sm">
                  <%= task.status === 'completed' ? 'Completed' : 'Pending' %>
                </button>
              </form>
              <div>
                <a href="/tasks/edit/<%= task.id %>" class="btn btn-primary btn-sm me-1">Edit</a>
                <form action="/tasks/delete/<%= task.id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this task?')">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>